datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
    id        String   @id @default(auto()) @map("_id") @db.ObjectId 
    alternative1    String
    alternative2    String 
    alternative3    String
    alternative4    String
    alternative5    String  
    alternative6    String
    chosenCause     String
}

model Ong {
    id              String      @id @default(auto()) @map("_id") @db.ObjectId
    name            String
    email           String
    phone           Int 
    city            String
    cep             Int
    ongType         String
    registerDate    DateTime
    acceptionDate   DateTime        
}
